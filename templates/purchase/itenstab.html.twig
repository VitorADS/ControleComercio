{% include "purchase/addpurchaseitemsmodal.html.twig" %}

<div class="mt-4">
    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#purchaseItem">Adicionar item</button>
</div>

<table class="table table-dark table-striped border border-black mt-4 text-center">
    <thead>
        <tr>
        <th scope="col">Item</th>
        <th scope="col">Quantidade</th>
        <th scope="col">Total</th>
        <th scope="col">Usuario</th>
        <th scope="col">Acoes</th>
        </tr>
    </thead>
    <tbody>
        {% for purchaseItem in items %}
            <tr>
                <td> {{purchaseItem.product}} </td>
                <td> {{purchaseItem.quantity}} </td>
                <td> R$ {{purchaseItem.getShowSubTotal}} </td>
                <td> {{purchaseItem.userSystem}} </td>
                <td>
                    <form action="{{ path('app_purchase_remove_item', {item: purchaseItem.id}) }}" method="POST">
                        <button title="Remover item" class="btn btn-danger btn-sm">
                            X
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td class="text-start"><strong> Total: {{ purchase.getShowTotal }} <br> A pagar: <span class="text-danger"> R$ {{ toPay }} </span></strong></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>