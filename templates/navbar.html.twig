<div class="jumbotron jumbotron-fluid bg-dark text-white mt-3 rounded-top border border-black">
  <div class="container">
    <h1 class="display-4">Bem-Vindo</h1>
    <p class="lead">Usuario logado: {{user.name}}</p>
  </div>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav me-auto mb-4 mb-lg-0">
                <li class="nav-item">
                <a class="nav-link {% if 'home' in app.request.get('_route') %} active{% endif %}"
                    aria-current="page" href="{{path('app_home')}}">Home</a>
                </li>
                {% if 'ROLE_ADMIN' in user.roles %}                
                    <li class="nav-item">
                    <a class="nav-link {% if 'admin' in app.request.get('_route') %} active{% endif %}"
                        href="{{path('app_admin_users')}}">Painel administrativo</a>
                    </li>
                {% endif %}
            </ul>
            <span class="navbar-text">
                <a href="{{path('app_auth_logout')}}" class="me-5">Sair</a>
            </span>
        </div>
    </div>
</nav>
</div>
