{% extends 'logged.html.twig' %}

{% block title %}Pagina Inicial{% endblock %}

{% block body %}
<div class="bg-dark text-white p-3 border border-black rounded-bottom">
    <h3>Ultimas vendas: </h3>

    {% include "alerts/message.html.twig" %}

    {% if showTable %}
        <table class="table table-dark table-striped border border-black text-center mt-4">
            <thead>
                <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome do cliente</th>
                <th scope="col">Total</th>
                <th scope="col">Data</th>
                <th scope="col">Usuario</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td> #{{item.id}} </td>
                        <td> {{item.buyerName}} </td>
                        <td> {{item.getShowTotal}} </td>
                        <td> {{item.createdAt|date('d/m/Y')}} </td>
                        <td> {{item.userSystem}} </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% include "pagination/pages.html.twig" with {'route' : 'app_home'} %}
    {% endif %}
</div>
{% endblock %}
